<%= form_with model: @product do |form| %>
    <% @product.errors.full_messages.each do |message| %>
        <div><%= message %></div>
    <% end %>
    <div> 
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>
    <div> 
        <%= form.label :description %>
        <%= form.text_area :description %>
    </div>
    <div> 
        <%= form.label :price %>
        <%= form.number_field :price %>
    </div>

    <div>
        <%= form.label :image %>
        <%= form.file_field :image %>
    </div>
    
    <%= form.submit %>

<% end %>